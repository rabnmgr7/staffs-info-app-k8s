pipeline {
    agent {
        label 'slave-shesh-node'
    }
    stages {
        stage('ImgBuild') {
            steps {
                sh """echo "Building Docker Images!!!"
                ./img-build.sh"""
            }
        }
        stage('PushToRegistry') {
            steps {
                sh '''echo "Pushing Images to DockerHub!!!"
                chmod +x img-push.sh
                ./img-push.sh'''
            }
        }
        stage('CleanWorkspace') {
            steps {
                sh '''
                echo "Removing Image from Workspace"
                chmod +x img-remove.sh
                ./img-remove.sh
                '''
            }
        }
        stage('DeployToProductionEnv') {
            steps {
                timeout(time:1, unit:'DAYS') {
                    input message: 'Approve to Deploy:'
                }
                sh ''' echo "Deploying Application to Production Environment..."
                chmod +x ./ansible/create-service.sh
                ansible-playbook -i ./ansible/inventory.ini --vault-password-file ~/Documents/secrets/.vault-secret -vv ./ansible/deploy.yaml'''
            }
        }
    }
}
